<% provide(:title, "ログイン") %>
<h1>ログイン</h1>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_with(scope: :session, url: login_path, method: :post, local: true) do |f| %>
    
      <%= f.label :email, class: "form-login" %>
      <%= f.email_field :email, class: "form-control" %>
      
      <%= f.label :password, class: "form-login" %>
      <%= f.password_field :password, class: "form-control" %>
      
      <%= f.submit "ログイン", class: "btn btn-primary btn-block btn-login" %>
    <% end %>
  </div>
</div>