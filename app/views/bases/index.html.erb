<% provide(:title,"拠点一覧") %>
<h1>拠点一覧</h1>
<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <table class="table table-condensed table-hover">
     <tr>
       <th></th>
       <th></th>
       <th>拠点番号</th>
       <th>拠点名</th>
       <th>勤怠種類</th>
     </tr>
     <% @bases.each do |base| %>
         <tr>
           <td><%= link_to "修正", edit_basis_path(base), class: "btn btn-primary", remote: true %></td>
           <td><%= link_to "削除", basis_path(base), method: :delete, data: {confirm: "#{base.base_name}を削除しますか？"}, class: "btn btn-primary" %></td>
           <td><%= base.base_number %></td>
           <td><%= base.base_name %></td>
           <td><%= base.kind %></td>
         </tr>
     <% end %>
    </table>
    <div>
      <%= link_to "拠点情報の追加",new_basis_path, class: "btn btn-primary", remote: true %>
    </div>
  </div>
</div>

<div id="new" class="modal fade" tableindex="-1" role="dialog" aria-hidden="true"></div>
<div id="edit" class="modal fade" tableindex="-1" role="dialog" aria-hidden="true"></div>