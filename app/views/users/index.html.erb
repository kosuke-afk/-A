<% provide(:title, "ユーザー一覧ページ") %>
<h1>ユーザー一覧</h1>
<div class="text-right">
  <%= form_tag(users_path,method: :get) do %>
    <%= text_field_tag :search %>
    <%= submit_tag "検索" %>
  <% end %>
</div>
<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <%= will_paginate %>
    <table class="table table-condensed ">
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td ><%= link_to user.name, user_path(user) %></td>
            <td class="text-right"><%= link_to "基本情報編集", edit_basic_info_user_path(user), class: "btn btn-success" %>
                <%= link_to "削除", user, method: :delete, 
                class: "btn btn-danger", data: { confirm: "削除してよろしいですか？"} %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate %>
  </div>
</div>