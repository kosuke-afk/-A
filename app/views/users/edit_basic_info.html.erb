<% provide(:title, "基本情報の更新") %>
<h1>基本情報の更新</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user, url: update_basic_info_user_path(@user), method: :patch, local: true) do |f| %>
      <%= render 'shared/error_message' %>
      
      <%= f.label :designated_work_start_time, class: "label-signup" %>
      <%= f.time_field :designated_work_start_time, class: "form-control" %>
      
      <%= f.label :designated_work_end_time, class: "label-signup" %>
      <%= f.time_field :designated_work_end_time, class: "form-control" %>
      
      <%= f.label :basic_work_time, class: "label-signup" %>
      <%= f.time_field :basic_work_time, class: "form-control" %>
      
      <%= f.submit "編集", class: "btn btn-primary btn-block btn-signup" %>
    <% end %>
      
  </div>
</div>